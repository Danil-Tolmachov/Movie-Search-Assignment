@model Business.Models.MovieModel
@{
}

<div class="content">
	<form asp-action="UpdateMovie" method="post">
		<div class="form-group">
			<label asp-for="Title">Title: </label>
			<input class="form-control" id="title" type="text" asp-for="Title"/>
		</div>

		<div class="form-group">
			<label asp-for="Director">Director: </label>
			<input class="form-control" id="title" type="text" asp-for="Director"/>
		</div>

		<div class="form-group">
			<label asp-for="ReleaseDate">Release Date: </label>
			<input class="form-control" id="title" type="date" asp-for="ReleaseDate"/>
		</div>

		<button class="btn btn-primary" type="submit" asp-controller="Movie" asp-action="UpdateMovie" asp-route-id="@Model.Id">Submit</button>
	</form>
</div>
